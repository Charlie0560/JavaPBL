          android:layout_gravity="center"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="5dp"
          android:background="@drawable/back_rec">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:text="Third Year"
                  android:gravity="center"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:textColor="#2D52D7"
                  android:textSize="35sp"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="70dp"
                  android:layout_marginEnd="15dp"
                  android:layout_margin="10dp"
                  android:gravity="center"
                  android:orientation="horizontal">
                  <ImageView
                      android:layout_width="150dp"
                      android:layout_height="wrap_content"
                      android:layout_marginEnd="10dp"
                      android:src="@drawable/pdf_upload_sem1">
                  </ImageView>
                  <ImageView
                      android:layout_width="150dp"
                      android:layout_marginStart="10dp"
                      android:layout_height="wrap_content"
                      android:src="@drawable/pdf_upload_sem2"/>
              </LinearLayout>
          </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/plus_be"
          android:visibility="invisible"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:src="@drawable/plus"
          android:layout_gravity="end"
          android:layout_marginEnd="10dp"/>
      <LinearLayout
          android:id="@+id/be_marksheet"
          android:visibility="invisible"
          android:layout_width="357dp"
          android:layout_height="206dp"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="15dp"
          android:background="@drawable/back_rec">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:text="Fourth Year"
