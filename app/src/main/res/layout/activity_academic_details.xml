<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".Academic_details">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#B9DBF6"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Academic Details"
            android:layout_marginEnd="35dp"
            android:textColor="#3561B1"
            android:textSize="23sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">


    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="600dp"
        android:background="@drawable/academic_result"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50dp"

        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="95dp"
            android:layout_marginStart="115dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/fe_sem1_cgpa"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="Enter cgpa"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/fe_sem2_cgpa"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="Enter cgpa"
                    android:layout_marginStart="45dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="23dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/se_sem1_cgpa"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="Enter cgpa"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/se_sem2_cgpa"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="Enter cgpa"
                    android:layout_marginStart="45dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="23dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/te_sem1_cgpa"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="Enter cgpa"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/te_sem2_cgpa"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="Enter cgpa"
                    android:layout_marginStart="45dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="23dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:id="@+id/be_sem1_cgpa"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="Enter cgpa"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/be_sem2_cgpa"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="Enter cgpa"
                    android:layout_marginStart="45dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="75dp"
                android:orientation="horizontal"
                >



                <TextView
                    android:id="@+id/display_result_cgpa"
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:layout_marginStart="90dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/calculate_cgpa"
        android:layout_width="250dp"
        android:layout_height="65dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#2D52D7"
        android:layout_gravity="center"
        android:layout_marginTop="65dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Calculate"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="monospace"/>
    </androidx.cardview.widget.CardView>


    </LinearLayout>

      //start here

      <androidx.cardview.widget.CardView

          android:id="@+id/upload_marksheet_btn"
          android:layout_width="250dp"
          android:layout_height="65dp"
          app:cardCornerRadius="25dp"
          app:cardBackgroundColor="#2D52D7"
          android:layout_gravity="center"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="15dp">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:text="Upload Marksheet"
              android:gravity="center"
              android:textColor="@color/white"
              android:textSize="23sp"
              android:fontFamily="monospace"/>
      </androidx.cardview.widget.CardView>

 //fe marksheet
      <LinearLayout
          android:id="@+id/fe_marksheet"
          android:visibility="invisible"
          android:layout_width="357dp"
          android:layout_height="206dp"
          android:orientation="vertical"
          android:layout_gravity="center"
          android:layout_marginTop="15dp"
          android:layout_marginBottom="5dp"
          android:background="@drawable/back_rec">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
             >
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:text="First Year"
                  android:gravity="center"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:textColor="#2D52D7"
                  android:textSize="35sp"/>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="70dp"
                  android:layout_marginEnd="15dp"
                  android:layout_margin="10dp"
                  android:gravity="center"
                  android:orientation="horizontal">
              <ImageView
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="10dp"
                  android:src="@drawable/pdf_upload_sem1">
              </ImageView>
              <ImageView
                  android:layout_width="150dp"
                  android:layout_marginStart="10dp"
                  android:layout_height="wrap_content"
                  android:src="@drawable/pdf_upload_sem2"/>
              </LinearLayout>
          </LinearLayout>

      </LinearLayout>

      <ImageView
          android:id="@+id/plus_se"
          android:visibility="invisible"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:src="@drawable/plus"
          android:layout_gravity="end"
          android:layout_marginEnd="10dp"/>


          //
          <LinearLayout
              android:id="@+id/se_marksheet"
              android:visibility="invisible"
              android:layout_width="357dp"
              android:layout_height="206dp"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:layout_marginTop="15dp"
              android:layout_marginBottom="5dp"
              android:background="@drawable/back_rec">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="15dp"
                      android:text="Second Year"
                      android:gravity="center"
                      android:fontFamily="sans-serif-condensed-medium"
                      android:textColor="#2D52D7"
                      android:textSize="35sp"/>

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="70dp"
                      android:layout_marginEnd="15dp"
                      android:layout_margin="10dp"
                      android:gravity="center"
                      android:orientation="horizontal">
                      <ImageView
                          android:layout_width="150dp"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="10dp"
                          android:src="@drawable/pdf_upload_sem1">
                      </ImageView>
                      <ImageView
                          android:layout_width="150dp"
                          android:layout_marginStart="10dp"
                          android:layout_height="wrap_content"
                          android:src="@drawable/pdf_upload_sem2"/>
                  </LinearLayout>
              </LinearLayout>
      </LinearLayout>

      <ImageView
          android:id="@+id/plus_te"
          android:visibility="invisible"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:src="@drawable/plus"
          android:layout_gravity="end"
          android:layout_marginEnd="10dp"/>

      <LinearLayout
          android:id="@+id/te_marksheet"
          android:visibility="invisible"
          android:layout_width="357dp"
