<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="370dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/reset_back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Your Password"
        android:textColor="#46535A"
        android:textSize="24sp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your email address.Weâ€™ll send you a link to reset your password."
        android:layout_marginStart="34dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="23dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/email" />
        <EditText
            android:id="@+id/email_reset"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:hint="Enter Your Email"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/reset_pass_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="5.5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Reset Password"
            android:textSize="21sp"
            android:gravity="center"
            android:textColor="#fff"/>
    </LinearLayout>
</LinearLayout>